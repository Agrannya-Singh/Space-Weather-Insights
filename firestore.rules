rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read-access to all data collections
    match /{document=**} {
      allow read: if true;
      allow write: if false; // Deny writes from the client
    }
    // Override for the cache collection to allow client-side writes
    match /cache/{docId} {
      allow read, write: if true;
    }
    // Rules for the summaryUsage collection
    match /summaryUsage/{userId} {
      allow read, write: if request.auth.uid == userId;
    }
    // Rules for the users collection
    match /users/{userId} {
      allow read: if request.auth.uid == userId;
      allow write: if false; // Deny all client-side writes
    }
  }
}
